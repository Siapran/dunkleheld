<?xml version="1.0" ?>
<prop name="spikes" file="spikes.png">

	<hitbox x="0" y="0" width="14" height="15" />

	<properties action="false" description="false" ground="false" solid="true"/>

	<frames xoff="0" yoff="0" xsize="16" ysize="16" t="100">
		<frame id="0" x="0" y="0"/>
		<frame id="1" x="1" y="0"/>
		<frame id="2" x="2" y="0"/>
		<frame id="3" x="3" y="0"/>
	</frames>

	<state name="off">
		<properties ground="true" solid="false"/>
		<description lang="fr">Des pieux, faisons attention.</description>
		<animation> 0 </animation>
		<action name="spikes_on" state="on">
			<animation> 1 </animation>
		</action>
	</state>
	
	<state name="on">
		<description lang="fr">Des pieux, faisons attention.</description>
		<animation> 2 3 </animation>
		<action name="spikes_off" state="off">
			<animation> 2 1 0 </animation>
		</action>
	</state>

</prop>