<?xml version="1.0" ?>
<prop name="chest" file="chest.png">

	<hitbox x="0" y="8" width="14" height="8" />

	<frames xoff="0" yoff="0" xsize="16" ysize="16">
		<frame id="0" x="0" y="0" t="100" />
		<frame id="1" x="1" y="0" t="100" />
		<frame id="2" x="2" y="0" t="100" />
		<frame id="3" x="3" y="0" t="100" />
		<frame id="4" x="4" y="0" t="100" />
		<frame id="5" x="5" y="0" t="100" />
	</frames>

	<state name="close">
		<description lang="fr">Oh, un coffre.</description>
		<animation> 0 </animation>
		<action name="chest_open" state="open" use="true" >
			<description lang="fr">Ouvrir</description>
			<animation> 1 2 3 4 5 </animation>
		</action>
	</state>

	<state name="open">
		<description lang="fr">Le coffre est vide.</description>
		<animation> 5 </animation>
	</state>

</prop>